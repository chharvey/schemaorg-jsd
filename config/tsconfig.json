{
  "compilerOptions": {
    "target"              : "ES2017",
    "module"              : "commonjs",
    "removeComments"      : true,
    "strictNullChecks"    : true,
    "strictFunctionTypes" : true,
    "noImplicitAny"       : true,
    "noImplicitThis"      : true,
    "noEmitOnError"       : true
  }
}
